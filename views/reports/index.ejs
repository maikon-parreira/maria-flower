<%- include('../header'); %>
<%- include('../menu'); %>
<main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
  <%- include('../navbar'); %>
  <div class="container-fluid py-4">
    <div class="row">
      <div class="col-12">
        <div class="card my-4">
          <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
            <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
              <h6 class="text-white text-capitalize ps-3">REPORTS</h6>
            </div>
          </div>
          <div class="card-body px-0 pb-2">
            <div class="table-responsive p-0">
              <table class="table align-items-center mb-0">
                <thead>
                  <tr>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Caller</th>
                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">CallsID</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Call Outcome</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Start Date</th>
                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">End Date</th>
                    <th class="text-secondary opacity-7"></th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let report of reports) { %>
                      <tr>
                        <td>
                          <div class="d-flex px-2 py-1">
                            <div class="d-flex flex-column justify-content-center">
                              <h6 class="mb-0 text-sm"><%= report.caller %></h6>
                            </div>
                          </div>
                        </td>
                        <td> <span class="text-xs font-weight-bold mb-0"><%= report.callId %></span> </td>
                        <td class="align-middle text-center text-sm">
                          <div class="d-flex flex-column justify-content-center">
                            <p class="text-xs text-secondary font-weight-bold">
                              <i title="<%= report.callOutcome %>" 
                                class="material-icons text-success text-gradient">
                                  <% if (report.callOutcome == 'AGENT') { %> 
                                    record_voice_over
                                  <% } else if (report.callOutcome == 'SELF_SERVICE') { %>
                                    keyboard
                                  <% } else if (report.callOutcome == 'VOICEMAIL') { %>    
                                  voicemail
                                  <% } %>
                              </i>
                            </p>
                          </div>  
                        </td>
                        <td class="align-middle text-center">
                          <span class="text-secondary text-xs font-weight-bold"><%= report.startDate %></span>
                        </td>
                        <td class="align-middle text-center">
                          <span class="text-secondary text-xs font-weight-bold"><%= report.endDate %></span>
                        </td>
                      </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('../footer'); %>
  </div>
</main>
<%- include('../settings'); %>
<%- include('../plugins'); %>